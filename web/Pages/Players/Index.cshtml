@page "/"
@model web.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Игроки";
}

<h2>Игроки</h2>

<p>
    <a asp-page="Create">Создать нового игрока</a>
</p>

<table class="table">
    <thead>
    <tr>
        <td>Фамилия</td>
        <td>Имя</td>
        <td>Пол</td>
        <td>Страна</td>
        <td>Дата рождения</td>
        <td>Команда</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Players)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @item.Gender.ToString()
            </td>
            <td>
                @item.Country.ToString()
            </td>
            <td>
                @item.DateOfBirth.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.Team.Name
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редактировать</a>
            </td>
        </tr>
    }
    </tbody>
</table>